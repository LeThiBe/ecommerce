<%= form_for @category, url: yield(:url) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :parent_id %><br>
  <%= f.collection_select :parent_id, @categories, :id, :name, {promt: t("choose_cate"), include_blank: t("super_cate")} %><br><br>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
