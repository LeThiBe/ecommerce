<% provide :title, t(".title") %>
<% provide :table, t(".table_user") %>
<% provide :add, t(".add_user") %>

<div class="container-fluid">
  <div class="card mb-3">
    <div class="card-header"><i class="fa fa-table"></i> <%= yield(:table) %></div>
    <div class="card-body">
      <div class="table-responsive">
      <div class="add_pd">
      <%= link_to yield(:add), new_admin_user_path, class: "btn btn-primary" %>
      <div class="search-bar">
        <%= form_tag admin_users_path, method: :get do %>
          <%= text_field_tag :search, params[:search], placeholder: t(".search") %>
        <% end %>
      </div>
    </div>
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr class="row_custom header">
              <th><%= t "view.admin.users.index.table_th.id" %></th>
              <th><%= t "view.admin.users.index.table_th.image" %></th>
              <th><%= t "view.admin.users.index.table_th.name" %></th>
              <th><%= t "view.admin.users.index.table_th.email" %></th>
              <th><%= t "view.admin.users.index.table_th.address" %></th>
              <th><%= t "view.admin.users.index.table_th.phone" %></th>
              <th><%= t "view.action" %></th>
            </tr>
          </thead>
        <tbody>
          <%= render "users" %>
        </tbody>
        </table>
        <div class="pag">
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>

