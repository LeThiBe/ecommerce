<div class="container">
  <table id="cart" class="table table-hover table-condensed">
    <thead>
      <tr>
        <th style="width:50%"><%= t ".product" %></th>
        <th style="width:10%"><%= t ".price" %></th>
        <th style="width:8%"><%= t ".quantity" %></th>
        <th style="width:12%" class="text-center"><%= t ".subtotal" %></th>
        <th style="width:20%"></th>
      </tr>
    </thead>
    <%= render cart.line_items %>
    <tfoot>
      <tr>
        <td><%= link_to t(".continue"), products_path, class: "btn btn-warning" %></td>
        <td><%= button_to t(".empty"), cart, class: "btn btn-success btn-block", :method => :delete, data: {:confirm => t(".confirm") } %></td>
        <td colspan="2" class="hidden-xs"></td>
        <td class="hidden-xs text-center"><strong><%= t ".total" %><%= number_to_currency(cart.total_price) %></strong></td>
        <td><%= button_to t(".checkout"), "#", class: "btn btn-success btn-block", :method => :get %></td>
      </tr>
    </tfoot>
  </table>
</div>
