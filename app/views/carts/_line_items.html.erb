<%= form_for line_items.to_ary do |f| %>
  <tbody>
    <tr>
      <td data-th="Product">
        <div class="row">
          <div class="col-sm-3 hidden-xs"><%= link_to image_tag(f.product.image, :size => "100x100"), :size => "10x20", alt: t(".alt") %></div>
          <div class="col-sm-9">
            <h4 class="nomargin"><%= f.product.name %></h4>
            <p><%= f.product.description %></p>
          </div>
        </div>
      </td>
      <td data-th="Price"><%= number_to_currency(f.product.price) %></td>
      <td data-th="Quantity">
        <%= f.number_field :quantity %>
      </td>
      <td data-th="Subtotal" class="text-center"><%= number_to_currency(f.total_price) %></td>
      <td class="actions" data-th="">
        <%= link_to (submit_tag "update",  class: "btn btn-info btn-sm"), f, :method => :patch %>
        <%= link_to (submit_tag "delete", class: "btn btn-danger btn-sm"), "#",:method => :patch %>
      </td>
    </tr>
  </tbody>
<% end %>
