<!--information-starts-->
<div class="information">
  <div class="container">
    <div class="infor-top">
      <div class="col-md-4 infor-left">
        <h3><%= t ".follow" %></h3>
          <ul>
            <li>
              <%= link_to "#" do %>
              <span class="fb"></span><h6><%= t ".fb" %></h6>
              <% end %>
            </li>
            <li>
            <%= link_to "#" do %>
              <span class="google"></span><h6><%= t ".gg" %></h6>
            <% end %>
            </li>
          </ul>
      </div>

      <div class="col-md-4 infor-left">
        <h3><%= t ".account" %></h3>
        <ul>
          <% if logged_in? %>
            <li>
                <%= link_to "#" do %>
                  <h6><%= current_user.name %></h6>
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                  <h6><%= current_user.email %></h6>
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                  <h6><%= current_user.phone %></h6>
                <% end %>
              </li>
          <% end %>
        </ul>
      </div>
      <div class="col-md-4 infor-left">
        <h3><%= t ".store" %></h3>
        <h5><%= t ".num" %></h5>
        <p><%= link_to t(".email"), "#" %></p>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<!--information-end-->
<!--footer-starts-->
<div class="footer">
  <div class="container">
    <div class="footer-top">
      <div class="col-md-6 footer-left">
      </div>
      <div class="col-md-6 footer-right">
        <p><%= t ".foot" %></p>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<!--footer-end-->
