<section class="order_product">
  <div class="container">
    <div class="row">
        <h1><%= t ".your_order" %></h1>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th><%= t ".order_number" %></th>
              <th><%= t ".date" %></th>
              <th><%= t ".address" %></th>
              <th><%= t ".email" %></th>
              <th><%= t ".phone" %></th>
              <th><%= t ".total" %></th>
              <th><%= t ".status" %></th>
              <th><%= t "details" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "order", collection: @order_products, as: :order %>
          </tbody>
        </table>
    </div>
  </div>
</section>
