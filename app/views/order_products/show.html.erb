<section class="order_product">
  <div class="container">
    <div class="row">
        <h1><%= t ".order_details" %></h1>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th><%= t ".number_order" %></th>
              <th><%= t ".name" %></th>
              <th><%= t ".quantity" %></th>
              <th><%= t ".price" %></th>
              <th><%= t ".price_total" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "order_details", collection: @line_items, as: :item %>
          </tbody>
        </table>
        <h5><%= t ".order_number" %><%= @order.id %></h5>
        <h5><%= t ".order_status" %><%= @order.status %></h5>
        <% if @order.status != "approved" && @order.status != "cancelled"  %>
          <%= link_to t(".cancel_order"), order_product_path, method: :put, class: "btn btn-primary" %>
        <% else %>
          <%= button_tag t(".cancel_order"), type: :button, class: "btn btn-primary", disabled: true %>
        <% end %>
    </div>
  </div>
</section>
