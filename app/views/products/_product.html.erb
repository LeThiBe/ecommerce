<% @products.each do |p| %>
  <div class="col-md-3 about-left">
    <div class="product-main simpleCart_shelfItem">
      <%= link_to image_tag(p.image), product_path(p), alt: t(".alt"), class: "mask" %>
      <div class="product-bottom">
        <h3><%= p.name %></h3>
        <p><%= t ".explore" %></p>
        <h4>
          <span class=" item_price"><%= number_to_currency(p.price) %></span>
        </h4>
        <%= button_to "Add to Cart", line_items_path(:product_id => p), :remote => true %>
      </div>
    </div>
  </div>
<% end %>
