<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="register-main">
    <div class="col-md-6 account-left">
      <%= f.text_field :name, placeholder: t(".name"), required: true %>
      <%= f.email_field :email, placeholder: t(".email"), required: true %>
      <%= f.text_field :phone, placeholder: t(".phone"), required: true %>
      <%= f.text_field :address, placeholder: t(".address"), required: true %>
    </div>
    <div class="col-md-6 account-left">
      <%= f.password_field :password, placeholder: t(".password"), required: true %>
      <%= f.password_field :password_confirmation, placeholder: t(".password_confirmation"), required: true %>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="address submit">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
