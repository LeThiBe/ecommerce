<% provide :title, @user.name %>
<div class="row">
<div class="col-md-2"></div>
  <aside class="col-md-2">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-6">
    <h4><%= t ".name" %></h4>
    <%= @user.name %>
    <h4><%= t ".email" %></h4>
    <%= @user.email %>
    <h4><%= t ".phone" %></h4>
    <%= @user.phone %>
    <h4><%= t ".address" %></h4>
    <%= @user.address %>
  </div>
  <div class="clearfix"></div>
</div>
